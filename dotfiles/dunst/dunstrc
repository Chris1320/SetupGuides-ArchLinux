[global]
enable_posix_regex = true

# How, where, and when the notification should be displayed
notification_limit = 6
indicate_hidden = true
origin = bottom-right
follow = mouse

sort = true
idle_threshold = 120
show_age_threshold = 60
stack_duplicates = true

# The appearance of a notification
font = JetBrainsMono Nerd Font Mono 10
markup = full
format = "<b>%a</b>\n<i>%s</i>\n%b\n%p"
alignment = left
word_wrap = true
ignore_newline = false
show_indicators = yes

## Notification frame appearance
frame_color = "#89B4FA"
frame_width = 1
corner_radius = 5
padding = 8
horizontal_padding = 10

separator_color = frame
separator_height = 1

## Progress Bar
progress_bar = true
progress_bar_corner_radius = 5

# History
sticky_history = yes
history_length = 20

# Context Menu
dmenu = rofi -dmenu -no-custom -i -p "Notification actions"
browser = firefox
mouse_left_click = open_url, close_current
mouse_middle_click = do_action
mouse_right_click = context

# Icon settings
icon_position = left
icon_theme = Papirus
enable_recursive_icon_lookup = true
max_icon_size = 32
icon_corner_radius = 5

[urgency_low]
background = "#1E1E2E"
foreground = "#CDD6F4"
timeout = 5

[urgency_normal]
background = "#1E1E2E"
foreground = "#CDD6F4"
timeout = 10

[urgency_critical]
background = "#1E1E2E"
foreground = "#CDD6F4"
frame_color = "#FAB387"
timeout = 0
